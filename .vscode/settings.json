{
  "[r]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "REditorSupport.r",
    "editor.codeActionsOnSave": {
      "source.fixAll.r": "explicit"
    },
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "r.lsp.enabled": true,
  "r.lsp.debug": false,
  "r.lsp.diagnostics": true,
  "r.lsp.promptForWD": true,
  "r.sessionWatcher": true,
  "r.rterm.linux": "/usr/bin/R",
  "r.rpath.linux": "/usr/bin/R",
  "r.rtermSendDelay": 0,
  "r.source.focus": "editor",
  "r.source.useSourcePreview": true,
  "r.plot.useHttpgd": true,
  "r.plot.defaults": {
    "width": 800,
    "height": 600,
    "pixelRatio": 1
  },
  "r.alwaysUseActiveTerminal": true,
  "r.bracketedPaste": true,
  "r.useIntegerSeq": true,
  "r.help.engine": "browser",
  "r.autoIndent": true,
  "r.formatOnType": true,
  "r.showDiagnostics": "always",
  "r.showSignatureHelp": true,
  "r.showCompletionItemLabels": true,
  "r.showCompletionItemSnippets": true,
  "r.showArgumentsStatus": true,
  "r.showObjectSize": true,
  "r.showLastErrorMessage": true,
  "r.debugger": "vscDebugger",
  "r.debugger.breakOnEntry": false,
  "r.debugger.breakOnError": true,
  "r.debugger.stopOnEntry": false,
  "r.codeCompletion": "languageserver",
  "r.lsp.useSignatureHelp": true,
  "r.lsp.useHover": true,
  "r.lsp.useCompletion": true,
  "r.lsp.useDefinition": true,
  "r.lsp.useDocumentHighlight": true,
  "r.lsp.useDocumentSymbols": true,
  "r.lsp.useCodeLens": true,
  "r.lsp.useWorkspaceSymbols": true,
  "r.lsp.useFormatting": true,
  "r.lsp.useRangeFormatting": true,
  "r.lsp.useCodeActions": true,
  "editor.formatOnSave": true,
  "editor.trimAutoWhitespace": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "terminal.integrated.env.linux": {
    "R_PROFILE_USER": "${workspaceFolder}/.Rprofile"
  }
}
